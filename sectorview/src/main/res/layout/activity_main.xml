<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sector="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sectorview.MainActivity">

    <com.example.sectorview.SectorView
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sectorview"
        sector:radius="30sp"
        sector:background_color="#ff0000"/>
    <!--<com.example.sectorview.ProgressView-->
        <!--android:layout_below="@+id/sectorview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="放大"
            android:id="@+id/add"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="缩小"
            android:id="@+id/decrease"/>
    </LinearLayout>
</RelativeLayout>
